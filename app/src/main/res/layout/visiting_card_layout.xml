<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/visiting_card">

    </RelativeLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/visiting_card"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="201dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/names_container"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/contacts_container"
            app:layout_constraintVertical_chainStyle="spread"
            android:layout_marginEnd="10dp">
            <TextView
                android:id="@+id/surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/name"
                app:layout_constraintVertical_chainStyle="packed"
                android:text="Elon"
                android:textColor="@color/visiting_card"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/surname"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Musk"
                android:textColor="@color/visiting_card"
                android:textSize="20sp"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/contacts_container"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toBottomOf="@id/names_container"
            app:layout_constraintBottom_toTopOf="@id/social_container"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/phone_number"
                app:layout_constraintVertical_chainStyle="packed"
                android:text="elon_musk@gmail.com"
                android:textColor="@color/visiting_card"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="+1 000 000 00 00"
                android:textColor="@color/visiting_card"
                android:textSize="14sp"
                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/social_container"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintTop_toBottomOf="@id/contacts_container"
            app:layout_constraintBottom_toBottomOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icon_github"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/github"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/icon_linkedin"
                app:layout_constraintHorizontal_chainStyle="spread"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icon_linkedin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/linkedin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon_github"
                app:layout_constraintEnd_toStartOf="@id/icon_facebook"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icon_facebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/facebook"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon_linkedin"
                app:layout_constraintEnd_toStartOf="@id/icon_twitter"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icon_twitter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/twitter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/icon_facebook"
                app:layout_constraintEnd_toEndOf="parent"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>